@model MyBooking.Models.BookingModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>BookingModel</legend>

        @Html.HiddenFor(model => model.BookingId)

        <div class="editor-label">
            @Html.LabelFor(model => model.CustomerName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CustomerName)
            @Html.ValidationMessageFor(model => model.CustomerName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Staff)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.StaffId, Model.Staff.Select(x => 
                                                            new SelectListItem { Text = x.Name, Value = x.StaffId.ToString(), Selected = Model.StaffId == x.StaffId }), "Please select staff", null)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BookingDateTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BookingDateTime)
            @Html.ValidationMessageFor(model => model.BookingDateTime)
        </div>

        <p>
            <input type="submit" value="Create" />
            <input type="submit" value="Cancel" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
